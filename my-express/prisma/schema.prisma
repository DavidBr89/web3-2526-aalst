generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int       @id @default(autoincrement())
  firstName  String    @db.VarChar(50)
  lastName   String    @db.VarChar(50)
  email      String    @unique
  password   String
  birthDate  DateTime?
  isVerified Boolean   @default(false)

  @@unique([firstName, lastName])
  @@map("users")
}
